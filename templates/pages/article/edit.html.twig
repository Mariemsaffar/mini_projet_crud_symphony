{% extends "base.html.twig" %}

{% block title %} modification d'un article
{% endblock %}

{% block body %}
	<div class="container">

		<h1 class="mt-4">modification de la marque d'un article</h1>
		{% form_theme form 'bootstrap_5_layout.html.twig' %}

		<form name="article" method="post">

			<div class="form-group">
				{{ form_label(form.libelle) }}
				{{ form_widget(form.libelle) }}
				<div class="form-error">
					{{ form_errors(form.libelle) }}
				</div>
			</div>

			<div class="form-group">
				{{ form_label(form.marque) }}
				{{ form_widget(form.marque) }}
				<div class="form-error">
					{{ form_errors(form.marque) }}
				</div>
			</div>

			{{ form_row(form._token) }}

			<a href="{{path('index')}}" class="btn btn-primary"> Modifier l'article</a>

		</div>

	</form>
</div>
{% endblock %}